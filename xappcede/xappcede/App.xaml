<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xappcede.App">
    <Application.Resources>
        
        <Style TargetType="Frame" x:Key="frame">
            <Setter Property="BackgroundColor" Value="#f6f6f6"/>
            <Setter Property="Margin" Value="30"/>
            <Setter Property="HasShadow" Value="True"/>
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <Style TargetType="Button" x:Key="button">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="BackgroundColor" Value="#CE0B06"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>

        <Style TargetType="Label" x:Key="labelTittle">
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="#CE0B06"/>
        </Style>

        <Style TargetType="Entry" x:Key="formEntry">
            <Setter Property="PlaceholderColor" Value="#803a28"/>
        </Style>
    </Application.Resources>
</Application>